<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav ml-auto">
        <% if(user) { %>
          <form class="nav-item form-inline" action="/logout" method="POST">
            <div class="nav-item mr-2">Logged In as: <%= user.email %></div>
            <button type="submit" class="btn btn-outline-dark">Log out</button>
          </form>
        <% } else { %>
          <form class="nav-item form-inline" action="/login" method="POST">
            <input class="form-control mr-2" type="text" name="username" placeholder="username" style="width: 300px;">
            <button type="submit" class="btn btn-outline-dark">Sign in</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
